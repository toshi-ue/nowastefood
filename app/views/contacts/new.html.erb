<%= javascript_pack_tag 'contacts' %>
<div class="row">
  <div class="col-10 offset-1 col-md-6 offset-md-3 mt-2">
    <div class="page-title text-center">お問い合わせ</div>
    <div>
      <%= render "shared/flash_messages" %>
      <%= render 'shared/error_messages', {resource: @contact} if @contact.errors.any? %>
    </div>
    <%= form_with(model: @contact, url: contacts_path, method: :post, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :category %>
        <%= form.select(:category, Contact.categories.keys.map{|k| [I18n.t("enums.contact.category.#{k}"), k]}, {prompt: "選択してください", required: true}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= form.label :subject %>
        <%= form.text_field :subject, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: 'form-control' %>
      </div>
      <div class="form-group text-center">
        <%= form.submit "送信する", class: 'btn btn-outline-secondary' %>
      </div>
    <% end %>
  </div>
</div>
