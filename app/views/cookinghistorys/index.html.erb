<div class="content_wrapper">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3 mt-2">
      <%= render "shared/flash_messages" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="page-title text-center d-block">料理履歴</div>
    </div>
    <% if @cookinghistorys.present? %>
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
      <div>
        <table class="table table-hover">
          <thead class="d-none">
            <tr>
              <th class="th-image"></th>
              <th class="th-description"></th>
              <th class="th-btn"></th>
            </tr>
          </thead>
          <tbody id="favorites-list">
            <%= render partial: "cooking_history", collection: @cookinghistorys, as: "cooking_history" %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-12 col-md-7 d-flex justify-content-center">
        <%= paginate @cookinghistorys, theme: 'twitter-bootstrap-4',
                              pagination_class: "pagination-sm",
                              nav_class: "d-inline-b"
        %>
    </div>
    <% else %>
    <div class="col-12">
      <div class="page-title text-center"></div>
      <p class="text-muted text-center no-favorites-description">まだ登録がありません</p>
    <% end %>
  </div>
</div>
  <div class="col-12">
    <p class="text-center">
      <%= link_to todaysmenus_path do %>
      <button class="btn btn-success">今日の献立へ</button>
      <% end %>
    </p>
    <p class="text-center">
      <%= link_to favorites_path do %>
        <button class="btn btn-success">お気に入りへ</button>
      <% end %>
    </p>
    <p class="text-center">
      <%= link_to root_path do %>
      <button class="btn btn-success">トップページへ</button>
      <% end %>
    </p>
  </div>

<% content_for(:html_title) { '料理履歴' } %>
