<div class="row">
  <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3 mt-2">
    <%= render "shared/flash_messages" %>
    <div class="page-title text-center my-2">あなたのレシピ</div>
    <div>
      <% if @cuisines.present? %>
        <p class="text-center">
          <%= link_to new_managecuisine_path do %>
            <button class="btn btn-success">登録する</button>
          <% end %>
        </p>
        <table class="table table-hover">
          <tbody>
            <%= render partial: "cuisine", collection: @cuisines, as: "cuisine" %>
          </tbody>
        </table>
      <% else %>
          <div class="text-center search-btn">
            <p class="text-muted no-todaysmenus-description">あなたのレシピはまだありません<br>登録しましょう!!</p>
            <p class="text-center">
              <%= link_to new_managecuisine_path do %>
                <button class="btn btn-success">登録する</button>
              <% end %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
</div>
