<tr id="foodstuff_<%= foodstuff.id %>">
  <td class="align-middle" style="width: 40%"><%= foodstuff.rawmaterial.name %></td>
  <td class="align-middle" style="width: 30%"><%= foodstuff.quantity %><%= foodstuff.rawmaterial.unit.name unless foodstuff.quantity.start_with?('適量', '少々', 'お好みで') %></td>

  <td class="align-middle" style="width: 30%">
    <%= link_to edit_manageownfoodstuff_path(foodstuff.id),
                class: 'btn btn-default btn-outline-secondary',
                local: true do %>
      <i class="fas fa-pen"></i>
    <% end %>
    <%= link_to manageownfoodstuff_path(id: foodstuff.id, cuisine_id: @cuisine.id),
                class: 'btn btn-default btn-outline-secondary mt-1 mt-md-0',
                method: :delete do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
