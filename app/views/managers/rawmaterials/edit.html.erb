<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 d-inline">原材料変更</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <%= link_to 'Home', managers_dashboard_path, { class: 'text-muted' } %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to '原材料一覧', managers_rawmaterials_path, { class: 'text-muted' } %>
          </li>
          <li class="breadcrumb-item active">原材料変更</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <%= form_with(model: @rawmaterial, url: managers_rawmaterial_path, local: true, method: :patch) do |form| %>
            <div class="card-body">
              <%= render 'shared/error_messages', { resource: @rawmaterial } if @rawmaterial.errors.any? %>
              <%= render 'form', { form: form, rawmaterial: @rawmaterial } %>
            </div>
            <div class="card-footer">
              <%= form.submit class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
