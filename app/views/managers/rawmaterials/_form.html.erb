<div class='form-group'>
  <%= form.label :foodcategory_id, class: 'control-label' %>
  <%= form.collection_select(:foodcategory_id, Foodcategory.all, :id, :name, { prompt: '選択してください', required: true }, { class: 'form-control' }) %>
</div>
<div class='form-group'>
  <%= form.label :name, class: 'control-label' %>
  <%= form.text_field :name, id: :rawmaterial_name, autofocus: true, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :hiragana, class: 'control-label' %>
  <%= form.text_field :hiragana, id: :rawmaterial_hiragana, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :unit_id, class: 'control-label' %>
  <%= form.collection_select(:unit_id, Unit.all, :id, :name, { prompt: '選択してください', required: true }, { class: 'form-control' }) %>
</div>
<div class='form-group'>
  <%= form.label :expiry_period, class: 'control-label' %><small>(日数, 1 ~ 100)</small>
  <%= form.number_field :expiry_period, id: :rawmaterial_name, class: 'form-control' %>
</div>
<%# TODO: 緊急的にuser_idにmanager_idを割り当てる %>
<%= form.hidden_field :user_id, value: (@rawmaterial.user_id.presence || current_manager.id) %>
