<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div>
      <%= render 'layouts/flash_message' %>
    </div>
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 d-inline">原材料一覧</h1>
          <% if current_manager.editable? %>
            <%= link_to new_managers_rawmaterial_path, class: 'btn btn-info ml-2', role: 'button' do %>
              <i class="fas fa-plus"></i> 追加する
            <% end %>
          <% end %>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <%= link_to 'Home', managers_dashboard_path, { class: 'text-muted' } %>
          </li>
          <li class="breadcrumb-item active">原材料一覧</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div>
              <div class="row">
                <div class="col-sm-12 col-md-6"></div>
                <div class="col-sm-12 col-md-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <% if @rawmaterials.present? %>
                    <table class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th><%= sort_link(@q, :id, 'ID', default_order: :desc) %></th>
                          <th><%= sort_link(@q, :name, '原材料名', default_order: :desc) %></th>
                          <th><%= sort_link(@q, :foodcategory_id, '食材区分名', default_order: :desc) %></th>
                          <th><%= sort_link(@q, :foodstuffs_count, '使用中のレシピ数') %></th>
                          <th><%= sort_link(@q, :expiry_period, '消費期限') %></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <%= render partial: 'rawmaterial', collection: @rawmaterials, as: 'rawmaterial' %>
                      </tbody>
                    </table>
                  <% else %>
                    <div class="text-center">
                      <p>まだ登録がありません</p>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 col-md-5">
                  <div class="dataTables_info" id="example2_info" role="status" aria-live="polite"><%= page_entries_info @rawmaterials %>
                  </div>
                </div>
                <div class="col-sm-12 col-md-7 d-flex justify-content-center">
                  <%= paginate @rawmaterials, theme: 'twitter-bootstrap-4',
                                              pagination_class: 'pagination-sm',
                                              nav_class: 'd-inline-b' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.content -->
