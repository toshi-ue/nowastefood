<div class="content_wrapper">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3 mt-2">
      <%= render 'shared/flash_messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1 col-lg-6 offset-lg-3">
      <div class="page-title text-center">家にある食材</div>
    </div>
    <div class="col-10 offset-1 col-lg-6 offset-lg-3 mt-2">
      <div class="text-center">
        <%= link_to new_stock_path do %>
          <button class="btn btn-success" type="button">食材を追加する</button>
        <% end %>
      </div>
    </div>
  </div>

  <% if @stocks.present? %>
  <div class="row">
    <div class="col-12 offset-0 col-md-10 offset-md-1 col-lg-6 offset-lg-3 mt-2">
      <table class="table table-hover">
      <thead>
        <tr>
          <th class="align-middle text-center">食材<br />(数量)</th>
          <th class="align-middle text-center">消費期限<br>(購入日)</th>
          <th class="align-middle"></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'stock', collection: @stocks, as: 'stock' %>
      </tbody>
    </table>
    </div>
  </div>
  <% else %>
    <p class="text-center mt-2">
      まだ登録がありません
    </p>
  <% end %>
</div>
