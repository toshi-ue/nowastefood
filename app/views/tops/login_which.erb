                            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">ログイン</button></div>
                        </form>
                        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">ゲスト管理者でログイン</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
